{{#each posts}}
<table class=" table table-hover table-bordered mb-3">
    <thead class='table-info'>
        <th class='text-left clear-border p-3'>Author: {{this.author}}</th>
        <th class='text-right clear-border p-3'>Date: {{this.date}}</th>
    </thead>
    <tbody class='text-center'>
        <tr>
            <td colspan="2" class='p-3'>{{this.title}}</td>
        </tr>
        <tr>
            <td colspan="2" class='p-3 text-left'>{{this.content}}</td>
        </tr>
    </tbody>
</table>
{{/each}}