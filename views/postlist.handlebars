<table class=" table table-hover table-bordered mb-10">
{{#each posts}}
    <thead>
        <th class='text-left'>{{this.author}}</th>
        <th class='text-right'>{{this.date}}</th>
    </thead>
    <tbody class='text-center'>
        <tr>
            <td colspan="2">{{this.title}}</td>
        </tr>
        <tr>
            <td colspan="2">{{this.post}}</td>
        </tr>
{{/each}}
    </tbody>
</table>